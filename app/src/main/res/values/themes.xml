<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Money_manager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Button_Background">
        <item name="backgroundTint">@color/yellow_600</item>
    </style>

    <style name="Theme.Money_manager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Money_manager.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Money_manager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />\

    <style name="Success">
        <item name="stTextColor">@color/white</item>
        <item name="stTextSize">18sp</item>
        <item name="stColorBackground">@color/green_300</item>
        <item name="stIconStart">@drawable/check</item>
    </style>

    <style name="Error">
        <item name="stTextColor">@color/white</item>
        <item name="stTextSize">18sp</item>
        <item name="stColorBackground">@color/red_300</item>
        <item name="stIconStart">@drawable/error</item>
    </style>
    <style name="Warning">
    <item name="stTextColor">@color/white</item>
    <item name="stTextSize">18sp</item>
    <item name="stColorBackground">@color/yellow_300</item>
    <item name="stIconStart">@drawable/warning</item>
    </style>
</resources>